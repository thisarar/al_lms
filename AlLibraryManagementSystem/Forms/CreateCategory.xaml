<Window x:Class="AlLibraryManagementSystem.Forms.CreateCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Category - AL Library Management System" Height="206.142" Width="440.164"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="CreateCategoryView" HorizontalAlignment="Left" Height="174" VerticalAlignment="Top" Width="430" Background="White">
        <TextBox HorizontalAlignment="Left" Height="23" Margin="48,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="351" FontSize="14"/>
        <Label Content="Category Name" HorizontalAlignment="Left" Margin="48,31,0,0" VerticalAlignment="Top" Width="202" FontFamily="Segoe UI Light" FontSize="20"/>
        <Button Style="{StaticResource NoGlareButton}" Content="Save" HorizontalAlignment="Left" Margin="173,113,0,0" VerticalAlignment="Top" Width="117" BorderBrush="{x:Null}" Background="#FF00C853" Height="33" Foreground="White" FontSize="16" FontFamily="Segoe UI Semibold"/>
        <Button Style="{StaticResource NoGlareButton}" Content="Close" HorizontalAlignment="Left" Margin="295,113,0,0" VerticalAlignment="Top" Width="104" Height="33" BorderBrush="{x:Null}" Background="#FFE53935" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
    </Grid>
</Window>
